<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="GooglePlusButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#dd4b39</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="FacebookButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#3b5998</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TwitterButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#55acee</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
